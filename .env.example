# Database Configuration
# ======================

# SQLite (for development)
DATABASE_URL=sqlite:///recipes.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql+psycopg2://user:password@localhost:5432/recipes

DATABASE_ECHO=false
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Scraper Configuration
# ======================

# Rate limiting
SCRAPER_DELAY_SECONDS=3.0
SCRAPER_MAX_RETRIES=3
SCRAPER_RETRY_BACKOFF=2.0
SCRAPER_TIMEOUT_SECONDS=30

# Batch processing
SCRAPER_BATCH_SIZE=10
SCRAPER_MAX_RECIPES=

# Gousto URLs
GOUSTO_BASE_URL=https://www.gousto.co.uk
GOUSTO_SITEMAP_URL=https://www.gousto.co.uk/sitemap.xml
GOUSTO_ROBOTS_URL=https://www.gousto.co.uk/robots.txt

# Logging Configuration
# ======================

LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/scraper.log
LOG_ROTATION=10 MB
LOG_RETENTION=10

# Checkpoint Configuration
# =========================

CHECKPOINT_ENABLED=true
CHECKPOINT_INTERVAL=10
CHECKPOINT_FILE=.scraper_checkpoint.json

# Data Validation
# ===============

VALIDATION_STRICT=false
VALIDATION_REQUIRE_INGREDIENTS=true
VALIDATION_REQUIRE_INSTRUCTIONS=true
VALIDATION_MIN_CALORIES=0
VALIDATION_MAX_CALORIES=5000

# Export Configuration
# ====================

EXPORT_INCLUDE_INACTIVE=false
EXPORT_PRETTY_JSON=true
